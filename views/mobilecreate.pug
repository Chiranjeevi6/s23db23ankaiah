extends layout
block content
    h1= title
    form(id='MobileForm', action="/resource/mobile", method="POST")
        div.form-group
            label.mobileAttr(for='mobile_brand') Mobile Brand
            input#mobile_brand(type='text', name='mobile_brand')
        div.form-group
            label.mobileAttr(for='mobile_specification') Mobile Specification
            input#mobile_specification(type='text', name='mobile_specification')
        div.form-group
            label.mobileAttr(for='mobile_cost') Mobile cost
            input#mobile_cost(type='number', name='mobile_cost')
            br
            br
            input(type="submit")
        script.
            document.forms['MobileForm'].addEventListener('submit', (event) => {
                event.preventDefault();
                fetch(event.target.action, {
                    method: 'POST',
                    body: new URLSearchParams(new FormData(event.target)) 
                }).then((resp) => {
                    return resp.json();
                }).then((body) => {
                    alert("Save succeded")
                }).catch((error) => {
                    alert("Save failed " + error )
                });
            });